function ShowTimeHUD(second){local message,j = null;for(local i=0;i<=second;i++){j = second-i;if(g_time_hud && j > 0) message = "message "+"还剩"+j.tostring()+"秒";else{if(j > 15) message = "message <font color='#7CFC00'>"+"还剩"+j.tostring()+"秒</font>";else if(j > 5 && j <= 15) message = "message <font color='#EE7621'>"+"还剩"+j.tostring()+"秒</font>";else if(j > 0 && j <=5) message = "message <font color='#EE0000'>"+"还剩"+j.tostring()+"秒</font>";};EntFire("global_hud","AddOutput",message,i);EntFire("global_hud","ShowMessage","",i+0.01);}}
function SetButtons(second){local cmd = "<--坚守" + second.tostring() + "秒-->";local fiveLeft = second - 5; EntFire("global_text","SetText",cmd);cmd = "say " + cmd;EntFire("cmd","Command",cmd);ShowTimeHUD(second);DisplayText(0);EntFire("cmd","Command","say <--还剩5秒-->",fiveLeft);}
